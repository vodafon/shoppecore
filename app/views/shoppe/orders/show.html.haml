- @page_title = I18n.translate("shoppe.orders.one") + ' #' + @order.number

= content_for :header do
  %p.buttons
    = link_to I18n.translate("shoppe.words.edit"), [:edit, @order], :class => 'button'
    - if @order.accepted?
      = link_to I18n.translate("shoppe.orders.despatch_note"), [:despatch_note, @order], :class => 'button', :rel => 'print'
    = link_to I18n.translate("shoppe.orders.back"), :orders, :class => 'button grey'
  %h2.orders #{I18n.translate("shoppe.orders.one")}Â <b>##{@order.number}</b>

#order

  - if @order.received?
    = render 'order_details'
    = render 'status_bar'
  - else
    %p.warning
      This order is still being built by the customer in your store. At
      present you can only view the items which are within the order.


  = field_set_tag I18n.translate("shoppe.orders.order_items"), :class => 'padded' do
    = render 'order_items'
  
  - if @order.received?
    = field_set_tag I18n.translate("shoppe.orders.payments"), :class => 'padded orderPayments' do
      = render 'payments_table'
      = render 'payments_form'
